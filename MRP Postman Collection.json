{
  "info": {
    "name": "MRP Intermediate",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "http://localhost:8080/api/users/register",
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"user1\", \"password\": \"pass123\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "http://localhost:8080/api/users/login",
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"user1\", \"password\": \"pass123\"}"
        }
      }
    },
    {
      "name": "Create Media",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer user1-mrpToken"
          }
        ],
        "url": "http://localhost:8080/api/media",
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Inception\", \"mediaType\": \"movie\"}"
        }
      }
    },
    {
      "name": "Get All Media",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer user1-mrpToken"
          }
        ],
        "url": "http://localhost:8080/api/media"
      }
    },
    {
      "name": "Update Media",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer user1-mrpToken"
          }
        ],
        "url": "http://localhost:8080/api/media/<mediaId>",
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Inception Updated\"}"
        }
      }
    },
    {
      "name": "Delete Media",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer user1-mrpToken"
          }
        ],
        "url": "http://localhost:8080/api/media/<mediaId>"
      }
    }
  ]
}